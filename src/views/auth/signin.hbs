<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none;"
                    id="alert">
                    ¡Contraseña y/o Usuario incorrectos!
                </div>
                <div class="card-header">

                    <h3>Logueo</h3>
                </div>
                <div class="card-body">
                    <form action="/signin" method="POST" id="form">
                        <div class="form-group">
                            <input type="text" id="username" name="Username" placeholder="Usuario" class="form-control">
                        </div>

                        <div class="form-group">
                            <input type="password" id="password" name="Password" placeholder="Contraseña"
                                class="form-control">
                        </div>
                        <div class="form group">
                            <button class="btn btn-success btn-block">
                                Iniciar Sesion
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    $('#form').submit(function (evt) {
        console.log($);
        evt.preventDefault();
        const Username = document.querySelector("#username").value
        const Password = document.querySelector("#password").value
        console.log({ username, password });

        $.post("http://localhost:8080/signin", { Username, Password }, function (result) {
            //$("span").html(result);
            console.log(result)
            if (!result.error) {
                return window.location.replace("http://localhost:8080/profile")
            }
            $("#alert").css({ display: "inline" })

            //document.querySelector("#password").value = ""

        });

    });
</script>